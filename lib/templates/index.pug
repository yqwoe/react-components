doctype html
html
	head
		title antdx - React Components
		style(type="text/css").
			.antdx-title{
				border-bottom: 1px solid rgba(0, 0, 0, 0.2);
				height: 100px;
				line-height: 100px;
				text-indent: 20px;
				padding:0;
				margin:0;
			}
			.container-wrap{
				display: flex;
				padding:0;
				margin:0;
			}
			.components-list{
				width: 20%;
				box-shadow: 2px 2px 2px rgba(0,0,0,0.2);
				padding:0;
				margin:0;
			}

			.components-list li{
				line-height: 2.5;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
				padding-right: 10px;
				border-bottom: 1px solid rgba(0,0,0,0.2);
				text-indent: 20px;
			}
			#root{
				flex: 1;
				padding: 20px;
			}
	body
		h1.antdx-title antdx - React Components
		.container-wrap
			ul.components-list
				each item in components
					li
						a(href='/components/' + item.name)= item.name
			#root= demo_title
		each script in scripts
			script(crossorigin, src=script)